<div class="container-md mt-5">
  <div class="row justify-content-center">
    <div class="col-8">
      <h6 style="text-align:center"><%= "Editar item" %></h6>
      <h6 style="text-align:center"><%= "Contrato n. #{@item.term.contract.number}" %></h6>
      <h6 style="text-align:center"><%="#{@item.term.date_start.strftime("%d/%m/%Y")} - #{@item.term.date_end.strftime("%d/%m/%Y")}"%></h6>


        <div class="form m-5">
          <%= render 'shared/form_item', term: @term, item: @item %>
        </div>
          <hr>

        <%= link_to "Voltar à página do contrato n. #{@item.term.contract.number}", @item.term.contract, class:"btn-custom-light" %>
        <%= link_to 'Meus contratos', profile_path, class:"btn-custom-light" %>
    </div>
  </div>
</div>
