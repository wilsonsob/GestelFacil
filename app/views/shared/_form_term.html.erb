<%= simple_form_for [@contract, @term] do |f| %>
  <%= f.input :number, label: 'Número da vigência', placeholder: 'Ex.: 1' %>
  <%= f.input :description, label: 'Descrição', placeholder: 'Ex.: Termo aditivo nº 1' %>
  <%= f.input :date_start, label: 'Inicio da vigencia', placeholder: 'Ex.: 01/01/2021' %>
  <%= f.input :date_end, label: 'Fim de vigencia', placeholder: 'Ex.: 31/12/2021' %>
  <%#= f.input :amount, label: 'Valor total R$', placeholder: 'Ex.: 50000' %>
  <%= f.button :submit, "     Salvar     ", class: "btn-custom" %>
<% end %>
